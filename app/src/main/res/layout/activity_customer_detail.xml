<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/customerNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cliente: Juan Pérez"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/totalDebtText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deuda Total: $13000.00"
        android:textSize="18sp"
        android:textColor="#F44336"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/salesCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 venta(s) pendiente(s)"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ventas a Crédito:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customerSalesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
